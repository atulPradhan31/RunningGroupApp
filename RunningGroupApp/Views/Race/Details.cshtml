@model Race

<div class="col-md-7 col-lg-8">

    <div class="row g-3">
        <div class="col-sm-6">
            <img src=@Model.Image class="bd-placeholder-img card-img-top" width="100%" height="225" />
            <div class="card-body">
                <p class="card-text">@Model.Title</p>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.RaceCategory</p>
                <h4 class="mb-3">Billing address</h4>
                <p class="card-text">@Model.Address.Street</p>
                <p class="card-text">@Model.Address.City</p>
                <p class="card-text">@Model.Address.State</p>

            </div>
        </div>
    </div>
    <a asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">Back</a>
</div>
